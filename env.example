# Environment Variables Template for Fineprint.ai
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# ====================
# App Configuration
# ====================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Fineprint.ai"
NEXT_PUBLIC_APP_DESCRIPTION="AI-Powered Legal Document Simplification"

# ====================
# OpenAI Configuration
# ====================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# ====================
# Supabase Configuration
# ====================
# Get your values from: https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
SUPABASE_DB_PASSWORD=your_database_password

# ====================
# Clerk Authentication
# ====================
# Get your keys from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
CLERK_WEBHOOK_SECRET=whsec_your_clerk_webhook_secret

# ====================
# Stripe Payments
# ====================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PRICE_ID_PREMIUM=price_your_premium_price_id

# ====================
# Document Processing
# ====================
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760
# Supported file types (comma-separated)
ALLOWED_FILE_TYPES=application/pdf,text/plain
# Auto-deletion time in hours for unsaved documents
AUTO_DELETE_HOURS=72

# ====================
# Rate Limiting
# ====================
# Freemium limits
FREEMIUM_DOCUMENTS_PER_MONTH=5
FREEMIUM_PAGES_PER_DOCUMENT=20
# Premium limits
PREMIUM_DOCUMENTS_PER_MONTH=unlimited
PREMIUM_PAGES_PER_DOCUMENT=unlimited

# ====================
# Security
# ====================
# Generate a secure random string: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_32_chars_minimum
# Encryption key for sensitive data
ENCRYPTION_KEY=your_32_character_encryption_key
# JWT secret for API authentication
JWT_SECRET=your_jwt_secret_key

# ====================
# External Services (Optional)
# ====================
# Error tracking with Sentry
NEXT_PUBLIC_SENTRY_DSN=https://your_sentry_dsn
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# Analytics with PostHog
NEXT_PUBLIC_POSTHOG_KEY=phc_your_posthog_key
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Email service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ====================
# Development Tools
# ====================
# Enable detailed logging in development
DEBUG_MODE=true
# Enable API request logging
LOG_API_REQUESTS=true
# Disable telemetry collection
NEXT_TELEMETRY_DISABLED=1
